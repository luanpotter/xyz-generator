<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="viewport-bootstrap" xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<requiredProperties>
		<requiredProperty key="java-version">
			<defaultValue>1.8</defaultValue>
		</requiredProperty>
	</requiredProperties>

	<fileSets>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/main/java</directory>
			<includes>
				<include>Main.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/test/java</directory>
			<includes>
				<include>MainTest.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="false" encoding="UTF-8">
			<directory />
			<includes>
				<include>.gitignore</include>
			</includes>
		</fileSet>
	</fileSets>
</archetype-descriptor>
